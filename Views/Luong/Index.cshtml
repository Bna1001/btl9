@model IEnumerable<btlnhom09.Models.Luong>

@{
    ViewData["Title"] = "Index";
}

<h1>Lương</h1>

<p>
    <a asp-action="Create">Cập nhật mức lương</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.LuongID)
            </th>
            <th>Vị trí</th>
            <th hidden>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>Số Lương</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LuongID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LuongID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LuongID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LuongID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
